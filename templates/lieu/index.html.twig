{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}

{% block body %}
    <h1>Lieu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code_postal</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.id }}</td>
                <td>{{ lieu.adresse }}</td>
                <td>{{ lieu.ville }}</td>
                <td>{{ lieu.codePostal }}</td>
                <td>{{ lieu.pays }}</td>
                <td>
                    <a href="{{ path('lieu_show', {'id': lieu.id}) }}"><button type="button" class="btn btn-info"><i class="fas fa-eye"></i></button></a>
                    <a href="{{ path('lieu_edit', {'id': lieu.id}) }}"><button type="button" class="btn btn-warning"><i class="fas fa-pen"></i></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lieu_new') }}">Create new</a>
{% endblock %}
